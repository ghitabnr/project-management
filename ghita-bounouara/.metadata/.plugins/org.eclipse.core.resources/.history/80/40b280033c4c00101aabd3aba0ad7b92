package org.mql.spring.business;

import java.util.List;

import org.mql.spring.models.Formateur;
import org.mql.spring.models.Formation;
import org.mql.spring.models.Module;
import org.mql.spring.repositories.FormateurRepository;
import org.mql.spring.repositories.FormationRepository;
import org.mql.spring.repositories.ModuleRepository;
import org.springframework.beans.factory.annotation.Autowired;

public class FormationsServicesDefault implements FormationsServices{
	@Autowired
	private ModuleRepository moduleRepository;
	@Autowired
	private FormationRepository formationRepository;
	@Autowired
	private FormateurRepository formateurRepository;
	

	@Override
	public List<Module> getAllModules() {
		return moduleRepository.findAll();
	}

	@Override
	public List<Formateur> getAllFormateurs() {
		return formateurRepository.findAll();
	}

	@Override
	public List<Formation> getAllFormations() {
		return formationRepository.findAll();
	}

	@Override
	public List<Module> getModuleByKeyword(String keyword) {
		return moduleRepository.findByKeyword(keyword);
	}


}
