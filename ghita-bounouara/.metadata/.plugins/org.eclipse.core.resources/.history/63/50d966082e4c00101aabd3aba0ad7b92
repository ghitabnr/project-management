package org.mql.spring.dao;

import java.util.List;
import java.util.Vector;

import org.mql.spring.models.Formation;
import org.mql.spring.models.Formateur;
import org.mql.spring.models.Module;

public class ORM {
	
	public ORM() {
		// TODO Auto-generated constructor stub
	}
	
	public static Project getProject(String... row) {
		return new Project(getInt(row[0]), row[1], row[2], row[3], getInt(row[4]));
	}
	
	public static List<Project> getProjects(String data[][]){
		List<Project> projects = new Vector<Project>();
		for (int i=1; i<data.length;i++) {
			projects.add(getProject(data[i]));
		}
		return projects;
	}
	
	public static int getInt(String value) { 
		try {
			return Integer.parseInt(value);
		} catch (Exception e) {
			return -1;
		}
	}
	
	public static Position getPosition(String... row) {
		return new Position(getInt(row[0]), row[1]);
	}
	
	public static List<Position> getPositions(String data[][]){
		List<Position> positions = new Vector<Position>();
		for (int i=1; i<data.length;i++) {
			positions.add(getPosition(data[i]));
		}
		return positions;
	}
	
	

	public static Collaborator getCollaborator(String... row) {
		
		return new Collaborator(getInt(row[0]), row[1], row[2], row[3],getPosition(row[4]),getProject(row[5]));
	}
	
	public static List<Collaborator> getCollaborators(String data[][]){
		List<Collaborator> collaborators = new Vector<Collaborator>();
		for (int i=1; i<data.length;i++) {
			collaborators.add(getCollaborator(data[i]));
		}
		return collaborators;
	}
	
	
	
	
	
}
