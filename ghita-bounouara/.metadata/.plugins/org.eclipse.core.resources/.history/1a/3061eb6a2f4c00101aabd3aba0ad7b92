package org.mql.spring.dao;

import java.util.List;

import org.mql.spring.jdbc.Database;
import org.mql.spring.models.Formation;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

@Repository("formationDaoJdbc")
public class FormationDaoJdbc implements FormationDao{
	@Autowired
	private Database db;

	@Override
	public List<Formation> selectAll() {
		String[][] data = db.select("formation");
		return ORM.getFormation(data);
	}

	@Override
	public boolean insert(Formation fn) {
		return db.insert("formations", fn);
	}

}
